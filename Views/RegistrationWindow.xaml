<Window x:Class="wpf_final.Views.RegistrationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wpf_final.Views"
        mc:Ignorable="d"
        Title="RegistrationWindow" Height="400" Width="350">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Email:" Margin="10"/>
        <TextBox Grid.Row="0" Margin="10" Name="txtEmail"/>

        <TextBlock Text="Password:" Grid.Row="1" Margin="10"/>
        <PasswordBox Grid.Row="1" Margin="10" Name="txtPassword"/>

        <TextBlock Text="Username:" Grid.Row="2" Margin="10"/>
        <TextBox Grid.Row="2" Margin="10" Name="txtUsername"/>

        <Button Grid.Row="3" Margin="10" Content="Register"/>
    </Grid>
</Window>
